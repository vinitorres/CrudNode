{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2023"
        ],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": [
        "src/**/*",
        "prisma.config.ts"
    ]
}